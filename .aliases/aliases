# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/Projects"
alias t="cd ~/Temp"

# Colourise basic commands
alias ls="ls -G"
alias la="ls -la"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Vim with custom config path
alias vim="vim -u ~/.config/vim/vimrc"
