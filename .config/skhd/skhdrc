# create space
#fn - tab : yabai -m space --create

# destroy space
#fn - tab : yabai -m space --destroy

# next/previous space
fn - tab : yabai -m space --focus next || yabai -m space --focus first
fn + shift - tab : yabai -m space --focus prev || yabai -m space --focus last

# balance size of windows
#shift + cmd - r : yabai -m space --balance

# rotate the window tree clock-wise by 90 degrees
#shift + cmd - x : yabai -m space --rotate 90
